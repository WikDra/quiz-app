# Zmienne środowiskowe dla Flask Quiz-App

# Sekretne klucze (używaj silnych, unikalnych kluczy w środowisku produkcyjnym!)
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# URL frontendu
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Porty aplikacji
FRONTEND_PORT=5173
BACKEND_PORT=5000
BACKEND_HOST=localhost
FRONTEND_HOST=localhost

# Konfiguracja Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product IDs (used by both frontend and backend)
STRIPE_BASIC_PLAN_ID=prod_your_basic_plan_id_here
STRIPE_PRO_PLAN_ID=prod_your_pro_plan_id_here
